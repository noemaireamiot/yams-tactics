meta {
  name: Create Book
  type: graphql
  seq: 1
}

post {
  url: http://localhost:3000/graphql
  body: graphql
  auth: none
}

body:graphql {
  mutation ($authorId: ID!) {
    createOneBook(input: {
      book:{
        title: "Crime and Punishment", 
        authorId: $authorId
        releaseDate: "December 1866"
      }
    }) {
      title
      releaseDate
    }
  }
}

body:graphql:vars {
  {
    "authorId": "{{author_id}}"
  }
}
