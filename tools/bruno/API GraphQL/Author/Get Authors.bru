meta {
  name: Get Authors
  type: graphql
  seq: 2
}

post {
  url: http://localhost:3000/graphql
  body: graphql
  auth: none
}

body:graphql {
  query {
    authors {
      edges {
  			node {
          id
          name
          books {
            title
          }
        }
      }
    }
  }
}

vars:post-response {
  author_id: res.body.data?.authors.edges[0].node.id
}
